<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="12dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#f9f9f9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userProfileUserIcon"
        android:src="@drawable/elcacto"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/userProfileUserName"
            android:text="User Name"
            android:layout_toEndOf="@+id/userProfileUserIcon"
            android:layout_alignBottom="@+id/userProfileUserIcon"/>

        <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style= "?android:attr/ratingBarStyleSmall"
        android:numStars = "5"
        android:rating   = "4"
        android:id="@+id/userRatingBar"
        android:layout_marginStart="98dp"
        android:layout_toEndOf="@+id/userProfileUserName"
        android:layout_alignBottom="@+id/userProfileUserIcon"    />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userProfileUserName"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio Text"
            android:id="@+id/userProfileBio"
            android:textSize="18sp"
            android:textColor="#000000"/>
    </ScrollView>


</RelativeLayout>
