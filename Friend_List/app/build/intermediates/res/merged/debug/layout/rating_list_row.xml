<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingListItemUserImg"
        android:src="@drawable/elcacto"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Name"
        android:id="@+id/ratingListItemUserName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ratingListItemUserImg"
        android:ellipsize="end"
        android:singleLine="true" />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style= "?android:attr/ratingBarStyleSmall"
        android:numStars = "5"
        android:rating   = "4"
        android:id="@+id/ratingListItemRating"
        android:layout_marginStart="98dp"
        android:layout_toEndOf="@+id/ratingListItemUserName"
        android:layout_alignBottom="@+id/ratingListItemUserName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="comment goes here"
        android:id="@+id/ratingListItemComment"
        android:layout_below="@+id/ratingListItemUserImg"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ratingListItemUserImg"
        android:ellipsize="end"
        android:singleLine="true" />



</RelativeLayout>
